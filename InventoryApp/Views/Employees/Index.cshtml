@model IEnumerable<InventoryApp.Models.Employees>
@{ 
    Layout = "_Layout";
}

<a asp-action="Create" asp-controller="Employees">Create</a>
<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Address</th>
        <th>Action</th>
    </tr>

    @foreach(var emp in Model)
            {
                <tr>
                    <td>@emp.Id</td>
                    <td>@emp.Name</td>
                    <td>@emp.Email</td>
                    <td>@emp.Address</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Employees" asp-route-id="@emp.Id" class="btn btn-sm btn-info" onclick="return confirm('Are you sure to edit this record ?')" >Edit</a>||
                        <a asp-action="Delete" asp-controller="Employees" asp-route-id="@emp.Id" class="btn btn-sm btn-info" onclick="return confirm('Are you sure to delete this record ?')" >Delete</a>

                    </td>
                </tr>
            }
</table>
